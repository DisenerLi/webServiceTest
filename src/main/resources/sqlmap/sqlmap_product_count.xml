<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.bnq.dao.ProductCountDao">
    <resultMap id="productCount" type="com.bnq.entity.ProductCountDO">
        <id property="id" column="id" javaType="Long" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="productCode" column="product_code" />
        <result property="productName" column="product_name" />
        <result property="productNum" column="product_num" />
        <result property="saleCount" column="sale_count" />
        <result property="isDelete" column="is_delete" />
    </resultMap>

    <sql id="selectColumn" >
        id
        ,create_time
        ,update_time
        ,product_code
        ,product_name
        ,product_num
        ,sale_count
        ,is_delete
    </sql>

    <sql id="queryWhereSql">
        where is_delete = 0
        <if test="createTime != null">
           AND create_time = #{createTime}
        </if>
        <if test="updateTime != null">
           AND update_time = #{updateTime}
        </if>
        <if test="productCode != null">
           AND product_code = #{productCode}
        </if>
        <if test="productName != null">
           AND product_name = #{productName}
        </if>
        <if test="productNum != null">
           AND product_num = #{productNum}
        </if>
        <if test="saleCount != null">
           AND sale_count = #{saleCount}
        </if>
        <if test="isDelete != null">
           AND is_delete = #{isDelete}
        </if>
    </sql>

    <select id="query" resultMap="productCount" parameterType="com.bnq.dao.query.ProductCountQuery" >
        select
        <include refid="selectColumn" />
        from product_count
        <include refid="queryWhereSql"/>
    </select>

    <select id="count" resultMap="productCount" parameterType="com.bnq.dao.query.ProductCountQuery">
        select
        count(1)
        from product_count
        <include refid="queryWhereSql"/>
    </select>

    <update id="update" parameterType="com.bnq.entity.ProductCountDO" >
        update product_count
        set
        <if test="productCode != null">
             product_code = #{productCode},
        </if>
        <if test="productName != null">
             product_name = #{productName},
        </if>
        <if test="productNum != null">
             product_num = #{productNum},
        </if>
        <if test="saleCount != null">
             sale_count = #{saleCount},
        </if>
        <if test="isDelete != null">
             is_delete = #{isDelete},
        </if>
        update_time = now()
        where id = #{id}
    </update>

    <insert id="insert" parameterType="com.bnq.entity.ProductCountDO" useGeneratedKeys="true" keyProperty="id" >
        INSERT INTO product_count (
        create_time
        ,update_time
        ,product_code
        ,product_name
        ,product_num
        ,sale_count
        ,is_delete
        )
        VALUES (
        <![CDATA[
        now()
        ,now()
        ,#{productCode}
        ,#{productName}
        ,#{productNum}
        ,#{saleCount}
        ,0
        ]]>
        );
        <!--<selectKey keyProperty="id" resultType="long" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>-->
    </insert>

    <update id="deleteById" parameterType="java.lang.Long">
        update product_count
        set
        is_delete=1 ,
        update_time = now()
        where id = #{id}
    </update>

    <update id="updateWithSaleCount" parameterType="java.util.Map">
        update product_count
        set
        <if test="productCode != null">
            product_code = #{productCountDO.productCode},
        </if>
        <if test="productName != null">
            product_name = #{productCountDO.productName},
        </if>
        <if test="productNum != null">
            product_num = #{productCountDO.productNum},
        </if>
        <if test="saleCount != null">
            sale_count = #{productCountDO.saleCount},
        </if>
        <if test="isDelete != null">
            is_delete = #{productCountDO.isDelete},
        </if>
        update_time = now()
        where id = #{id}
        and sale_count = #{count}
    </update>

</mapper>